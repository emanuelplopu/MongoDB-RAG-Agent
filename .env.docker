# RecallHub - Docker Environment Configuration
# Copy this to .env and fill in your API keys
#
# Port Assignments (exposed on host):
#   - MongoDB:  11017
#   - Backend:  11000
#   - Frontend: 11080
#   - Airbyte:  11020-11022 (optional)

# MongoDB Configuration (auto-configured for Docker)
MONGODB_URI=mongodb://mongodb:27017/?directConnection=true
MONGODB_DATABASE=rag_db

# LLM Provider Configuration
# OpenAI (recommended):
LLM_PROVIDER=openai
LLM_API_KEY=your-openai-api-key-here
LLM_MODEL=gpt-4.1-mini
LLM_BASE_URL=https://api.openai.com/v1

# For OpenRouter:
# LLM_PROVIDER=openrouter
# LLM_API_KEY=your-openrouter-key-here
# LLM_MODEL=anthropic/claude-haiku-4.5
# LLM_BASE_URL=https://openrouter.ai/api/v1

# For fully local with Ollama (use docker-compose.local.yml):
# LLM_PROVIDER=ollama
# LLM_API_KEY=ollama
# LLM_MODEL=llama3.2
# LLM_BASE_URL=http://ollama:11434/v1

# Embedding Provider Configuration
# For OpenAI embeddings:
EMBEDDING_PROVIDER=openai
EMBEDDING_API_KEY=your-openai-api-key-here
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_BASE_URL=https://api.openai.com/v1
EMBEDDING_DIMENSION=1536

# For Ollama embeddings (use docker-compose.local.yml):
# EMBEDDING_PROVIDER=ollama
# EMBEDDING_API_KEY=ollama
# EMBEDDING_MODEL=nomic-embed-text
# EMBEDDING_BASE_URL=http://ollama:11434/v1
# EMBEDDING_DIMENSION=768

# Profile Configuration
ACTIVE_PROFILE=default

# Application Settings
APP_ENV=development
LOG_LEVEL=INFO

# ============================================
# Security Settings
# ============================================

# JWT Secret Key - CHANGE THIS IN PRODUCTION!
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=recallhub-secret-key-change-in-production

# Registration Control
# Options: "open", "invite", "closed"
REGISTRATION_MODE=open

# Invite code (for REGISTRATION_MODE=invite)
# INVITE_CODE=your-invite-code

# API Documentation (set to "false" in production)
EXPOSE_API_DOCS=true

# Search Configuration
DEFAULT_MATCH_COUNT=10
MAX_MATCH_COUNT=50
DEFAULT_TEXT_WEIGHT=0.3

# Airbyte Integration (for Confluence, Jira)
# To enable: docker-compose -f docker-compose.yml -f docker-compose.airbyte.yml up -d
AIRBYTE_ENABLED=false
AIRBYTE_API_URL=http://airbyte-server:8001
AIRBYTE_WEBAPP_URL=http://localhost:11020
