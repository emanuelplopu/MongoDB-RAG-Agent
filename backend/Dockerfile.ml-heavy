# RecallHub Backend - ML Heavy Version (Optimized for Layer Caching)
# =====================================================================
# Layer Strategy for Fast Incremental Builds:
#   Layer 1: System deps + Python venv (rarely changes)
#   Layer 2: Heavy ML deps - torch, transformers, whisper, docling (~10GB, changes rarely)
#   Layer 3: API deps - fastapi, pydantic, etc (~500MB, changes occasionally)
#   Layer 4: Playwright browser (~400MB, rarely changes)
#   Layer 5: Application code (changes frequently - FASTEST to rebuild)
#
# Build Commands:
#   Fast build (default):  docker-compose build backend
#   Full rebuild:          docker-compose build --no-cache backend
#
# Requires BuildKit: DOCKER_BUILDKIT=1

# syntax=docker/dockerfile:1.4

# ============================================
# Stage 1: Base Builder with Python venv
# ============================================
FROM python:3.11-slim AS base-builder

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

# Install build dependencies for ML packages
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Create virtual environment
RUN python -m venv /app/.venv
ENV PATH="/app/.venv/bin:$PATH" \
    VIRTUAL_ENV="/app/.venv"

# Upgrade pip once
RUN pip install --upgrade pip

# ============================================
# Stage 2: Heavy ML Dependencies (RARELY CHANGES)
# These are the slowest to install - torch, transformers, whisper, docling
# Only rebuilds when requirements-ml-heavy.txt changes
# ============================================
FROM base-builder AS ml-deps

# Copy ONLY the ML requirements file first for layer caching
COPY backend/requirements-ml-heavy.txt ./requirements-ml-heavy.txt

# Install heavy ML dependencies with cache mount
RUN --mount=type=cache,target=/root/.cache/pip \
    pip install -r requirements-ml-heavy.txt

# ============================================
# Stage 3: API/Core Dependencies (CHANGES OCCASIONALLY)
# FastAPI, pydantic, httpx, etc - quick to install
# Only rebuilds when requirements-api.txt changes
# ============================================
FROM ml-deps AS api-deps

# Copy ONLY the API requirements file for layer caching
COPY backend/requirements-api.txt ./requirements-api.txt

# Install API dependencies with cache mount
RUN --mount=type=cache,target=/root/.cache/pip \
    pip install -r requirements-api.txt && \
    # Clean up pycache to reduce image size
    find /app/.venv -type d -name "__pycache__" -exec rm -rf {} + 2>/dev/null || true

# ============================================
# Stage 4: Playwright with Browser
# Only rebuilds if api-deps layer changes
# ============================================
FROM api-deps AS playwright-stage

# Install playwright and chromium browser
RUN --mount=type=cache,target=/root/.cache/pip \
    pip install playwright && \
    python -m playwright install chromium --with-deps

# ============================================
# Stage 5: Runtime - Final Image
# Application code is copied LAST for fastest rebuilds
# ============================================
FROM python:3.11-slim AS runtime

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PATH="/app/.venv/bin:$PATH" \
    VIRTUAL_ENV="/app/.venv"

# Install runtime dependencies including browser deps
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    ffmpeg \
    # Playwright runtime dependencies
    libnss3 \
    libnspr4 \
    libatk1.0-0 \
    libatk-bridge2.0-0 \
    libcups2 \
    libdrm2 \
    libxkbcommon0 \
    libxcomposite1 \
    libxdamage1 \
    libxfixes3 \
    libxrandr2 \
    libgbm1 \
    libasound2 \
    libpango-1.0-0 \
    libcairo2 \
    libdbus-1-3 \
    libatspi2.0-0 \
    libx11-xcb1 \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

WORKDIR /app

# Copy virtual environment and playwright cache from build stages
COPY --from=playwright-stage /app/.venv /app/.venv
COPY --from=playwright-stage /root/.cache/ms-playwright /root/.cache/ms-playwright

# ============================================
# APPLICATION CODE - LAST LAYER (CHANGES FREQUENTLY)
# This is the only layer that rebuilds when you change code
# Build time: ~30 seconds
# ============================================
COPY src/ ./src/
COPY backend/ ./backend/
COPY profiles.yaml ./

# Create directories for data
RUN mkdir -p /app/projects /app/data /app/documents

# Set default environment variables
ENV MONGODB_URI=mongodb://mongodb:27017/?directConnection=true \
    MONGODB_DATABASE=rag_db \
    PROFILES_PATH=/app/profiles.yaml

# Expose FastAPI port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/api/v1/system/health || exit 1

# Run FastAPI with uvicorn
CMD ["python", "-m", "uvicorn", "backend.main:app", "--host", "0.0.0.0", "--port", "8000"]
